extends layout

block content
  .container
    form(method='post', action='contact/send')
      h1 Contact
        .form-group
          label Name
          input.form-control(typer='text', name='name', placeholder='Enter Name')
        .form-group
          label Email
          input.form-control(typer='email', name='email', placeholder='Enter Email')
        .form-group
          label Message
          input.form-control(typer='message',placeholder='Enter Message...')
        button.btn.btn-default(typer='submit') Submit
